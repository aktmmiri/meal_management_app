<%= render 'shared/header' %>

<div class='top-page'>
  <%# アプリ説明 %>
  <div class='top-app-info'>
    <p class='top-info-one'>本当に痩せたいなら</p>
    <p class='top-info-two'>自分の食事を知ろう！</p>
  </div>
  <%# /アプリ説明 %>
  <%# 一覧表示 %>
  <div class='meal-title'>
    みんなの食事一覧
  </div>
  <ul class='meal-lists'>
    <% @meals.each do |meal| %>
      <li class='list'>
        <div class='list-left'>
          <div class='meal-img-content'>
            <%= link_to image_tag(meal.image, class: "meal-img"), meal_path(meal.id) %>
          </div>
        </div>
        <div class='list-right'>
          <p class='meal-name'>
            <%= meal.name %>
          </p>
          <div class='meal-info'>
            <span><%= meal.info %></span>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
  <%# /一覧表示 %>
</div>