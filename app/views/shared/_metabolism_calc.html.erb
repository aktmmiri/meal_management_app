<% weight_calc = user.weight * 0.0481
   height_calc = user.height * 0.0234
   age_calc = user.age * 0.0138 %>
<% if user.gender == "男性" %>
  <% metabolism_calc = (weight_calc + height_calc - age_calc -0.4235) * 1000 / 4.186 %>
<% else %>
  <% metabolism_calc = (weight_calc + height_calc - age_calc -0.9708) * 1000 / 4.186 %>
<% end %>
<%= "基礎代謝： #{metabolism_calc.round}kcal/日" %>

