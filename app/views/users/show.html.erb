<%= render 'shared/header' %>

<div class='user-page'>
  <div class='user-page-contents'>
    <div class='side-contents'>
      <div class='user-profile'>
        <h1 class='profile-title'>プロフィール</h1>
        <div class='user-info'>
          <%= "ニックネーム： #{@user.nickname}" %>
        </div>
        <div class='user-info'>
          <%= "性別： #{@user.gender}" %>
        </div>
        <div class='user-info'>
          <%= "年齢： #{@user.age}" %>
        </div>
        <div class='user-info'>
          <%= "身長： #{@user.height}cm" %>
        </div>
        <div class='user-info'>
          <%= "体重： #{@user.weight}kg" %>
        </div>
        <div class='user-edit-btn'>
          <%= link_to "編集", "#", class:'edit-btn' %>
        </div>
      </div>
      <div class='user-metabolism'>
      </div>
    </div>
    <div class='main-contents'>
      <ul class='main-tabs'>
        <li class='tab tab-active'><%= "#{@user.nickname}の食事内容一覧" %></li>
        <li class='tab'><%= "#{@user.nickname}のお気に入り一覧" %></li>
      </ul>
      <div class='main-meals'>
        <div class='tab-box box-show'>あ</div>
        <div class='tab-box'>い</div>
      </div>
    </div>
  </div>
</div>